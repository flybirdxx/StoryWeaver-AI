{
  "name": "storyweaver-ai",
  "version": "1.0.0",
  "private": true,
  "description": "智能分镜与漫画生成平台",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:ts\" \"npm run client:react\"",
    "dev:legacy": "echo '⚠️  旧版 UI 已废弃，请使用 npm run dev' && exit 1",
    "server": "node server/index.js",
    "client:legacy": "echo '⚠️  旧版 UI 已废弃，请使用 npm run client:react' && exit 1",
    "server:ts": "npm run dev --workspace @storyweaver/server",
    "client:react": "npm run dev --workspace storyweaver-client",
    "build": "npm run build --workspace storyweaver-client",
    "build:server": "npm run build --workspace @storyweaver/server",
    "build:all": "npm run build && npm run build:server",
    "start": "cross-env NODE_ENV=production node apps/server/dist/index.js",
    "start:ts": "cross-env NODE_ENV=production npm run start --workspace @storyweaver/server"
  },
  "keywords": [
    "storyboard",
    "ai",
    "gemini"
  ],
  "author": "",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@google/genai": "^0.2.0",
    "@google/generative-ai": "^0.2.1",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  }
}
